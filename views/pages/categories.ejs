<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./styles/categories.css" />
  </head>

  <body>
    <main>
      <%- include('../components/CategoriesBtn') %>

      <div class="grid-container">
        <% for (var i = 0; i < categoriesData.length; i++) { %>
        <div class="grid-item">
          <div class="grid-image">
            <img
              src="<%= categoriesData[i].imageSrc %>"
              alt="<%= categoriesData[i].altText %>"
              class="image"
            />
          </div>
          <span class="category-name"><%= categoriesData[i].name %></span>
        </div>
        <% } %>
      </div>
    </main>

    <script src="./scripts/categories.js"></script>
  </body>
</html>
